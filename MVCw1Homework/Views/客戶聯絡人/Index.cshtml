@model IEnumerable<MVCw1Homework.Models.客戶聯絡人>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>客戶聯絡人資料-List</h2>

<p>
    @Html.ActionLink("新增資料", "Create")
</p>
<form>
    @Html.TextBox("keyword")
